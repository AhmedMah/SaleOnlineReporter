@using WebSaleDistribute.Core
@using WebSaleDistribute.Core.Enums

@model Tuple<MultipleStepProgressTabOption, TableOption>

@{
    ViewData["dir"] = "ltr";
    var id = "SaleReturnInvoicesTable_" + Guid.NewGuid();
}

@section scripts
{
    <script>
        // Call DataTable() func in all of the jquery tables
        $(document).ready(function () {
            loadDataTables('saleReturnInvoicesRecipts', 50);
        })
    </script>
}

@Html.MultipleStepProgressTab(Model.Item1)


<h2 dir="rtl">@ViewBag.Title</h2>

<div class="container">
    <div class="tab-content">
        <div id="grid" class="tab-pane fade in active">
            <!-- data -->
            <br/>

            <div id="SaleReturnInvoicesTable">
                @(Html.PanelItem(new PanelItemOption()
                      {
                          Id = id,
                          Body = Html.TableItem(Model.Item2).ToHtmlString(),
                          Title = $"رسید برگشتی شماره {ViewBag.InvoiceSerial}",
                          IsRefreshable = false,
                          HasDetailLink = false,
                          GlyphIcon = "list-alt",
                          HasSettingPanel = false,
                          PanelType = DataStyleType.success
                      })
                      )
            </div>

            <!-- /data -->
        </div>
    </div>
</div>


<br />
<br />

<div class='text-right' style='padding-right: 10px; padding-bottom: 10px;'>
    <a class='btn btn-warning' href="@Url.Action("SaleReturnInvoices", "Warehouse")">
        <span class='glyphicon glyphicon-circle-arrow-left'></span>&nbsp;برگشتی ها
    </a>
</div>