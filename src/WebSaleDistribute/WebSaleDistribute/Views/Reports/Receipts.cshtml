@using System.Dynamic
@using WebSaleDistribute.Core
@using WebSaleDistribute.Core.Enums

@model List<ExpandoObject>

@section styles
{
    @Styles.Render("~/Content/jquery_ui")
    @Styles.Render("~/Content/lobipanel")
    @Styles.Render("~/Content/panel")
    @Styles.Render("~/Content/jquery_dataTables")
    @Scripts.Render("~/bundles/highcharts")
}

@section scripts
{
    @Scripts.Render("~/bundles/lobipanel")
    @Scripts.Render("~/bundles/panel")
    @Scripts.Render("~/bundles/jquery_dataTables")

    <script>
        @* Call DataTable() func in all of the jquery tables *@
        $(document).ready(function () {
            $('.dataTables').DataTable({
                //help: https://www.datatables.net/manual/options
                "lengthMenu": [[10, 25, 50, 100, 500, -1], [10, 25, 50, 100, 500, "همه"]]
                //select: true,
                //paging: false
            });
        })
    </script>

}

@section Preloader{
    <div class="preloader">
        <div class="status">&nbsp;</div>
    </div>
}


<h2 dir="rtl">@ViewBag.Title</h2>

<div class="container">
    <ul class="nav nav-pills">
        <li class="active"><a data-toggle="pill" href="#chart">نمودار</a></li>
        <li><a data-toggle="pill" href="#grid">جدول</a></li>
    </ul>



    <div class="tab-content">
        <div id="chart" class="tab-pane fade in active" dir="ltr">
            @*<h3>chart</h3>*@
            <!-- /.data -->
            <br />
                @(Html.PanelItem(new PanelItemOption()
                    {
                        Body = (string)ViewData["ColumnChart"],
                        Title = "نمودار رسیدی",
                        Url = "#",
                        GlyphIcon = "stats",
                        HasDetailLink = false,
                        HasSettingPanel = false,
                        PanelType = PanelType.danger
                    })
                )
            <!-- /.data-->
        </div>
        <div id="grid" class="tab-pane fade">
            @*<h3>grid</h3>*@
            <!-- /.data -->
            <br />
            @(Html.PanelItem(new PanelItemOption()
        {
            Body = Html.TableItem("receipts", (List<string>)ViewData["ModelSchema"], Model, Tuple.Create(0, OrderType.desc)).ToHtmlString(),
            Title = "لیست رسیدی ها",
            Url = "#",
            GlyphIcon = "list-alt",
            HasDetailLink = false,
            HasSettingPanel = false,
            PanelType = PanelType.danger
        })
            )

            <!-- /.data -->
        </div>
    </div>




</div>