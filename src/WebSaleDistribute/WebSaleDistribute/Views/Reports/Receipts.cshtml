@using System.Dynamic
@using WebSaleDistribute.Core

@model List<ExpandoObject>

@section styles
{
    @Styles.Render("~/Content/jquery_ui")
    @Styles.Render("~/Content/lobipanel")
    @Styles.Render("~/Content/panel")
    @Styles.Render("~/Content/jquery.dataTables")
}

@section scripts
{
    @Scripts.Render("~/bundles/lobipanel")
    @Scripts.Render("~/bundles/panel")
    @Scripts.Render("~/bundles/jquery.dataTables")

    <script>
        @* Call DataTable() func in all of the jquery tables *@
        $(document).ready(function () { $('.dataTables').DataTable(); });
    </script>

}

<h2>@ViewBag.Title</h2>

<div class="container" dir="ltr">
