            @Html.PanelItem("Lorem ipsum dolor sit amet concealed leaf shah proper council binary. ", "test 2", "#", "usd", null, PanelType.danger)

            @Html.PanelItem("Lorem ipsum dolor sit amet concealed leaf shah proper council binary. ", "test 3", "#", "globe", null, PanelType.info)

            @Html.PanelItem("test", "test 4", "#", null, null, PanelType.success)
