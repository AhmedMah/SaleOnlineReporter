@using System.Dynamic
@using WebSaleDistribute.Core
@using WebSaleDistribute.Core.Enums

@model List<ExpandoObject>

@section styles
{
    @Styles.Render("~/Content/jquery_ui")
    @Styles.Render("~/Content/lobipanel")
    @Styles.Render("~/Content/panel")
    @Styles.Render("~/Content/jquery.dataTables")
}

@section scripts
{
    @Scripts.Render("~/bundles/lobipanel")
    @Scripts.Render("~/bundles/panel")
    @Scripts.Render("~/bundles/jquery.dataTables")

    <script>
        @* Call DataTable() func in all of the jquery tables *@
        $(document).ready(function () {
            $('.dataTables').DataTable({
                //help: https://www.datatables.net/manual/options
                select: true,
                ordering: true
                //"order": [0, 'desc'],
                //paging: false,
                //scrollY: 400,

            });
        })
    </script>

}


<h2>@ViewBag.Title</h2>

<div class="container">
    <ul class="nav nav-pills">
        <li class="active"><a data-toggle="pill" href="#chart">نمودار</a></li>
        <li><a data-toggle="pill" href="#grid">جدول</a></li>
    </ul>



    <div class="tab-content">
        <div id="chart" class="tab-pane fade in active">
            <h3>chart</h3>
            <br />
            @(Html.PanelItem(new PanelItemOption()
                {
                    Body = "test",
                    Title = "لیست رسیدی ها",
                    Url = "#",
                    GlyphIcon = "list-alt",
                    HasDetailLink = false,
                    HasSettingPanel = false,
                    PanelType = PanelType.danger
                })
            )

        </div>
        <div id="grid" class="tab-pane fade">
            @*<h3>grid</h3>*@
            <!-- /.data -->
            <br />
            @(Html.PanelItem(new PanelItemOption()
                {
                    Body = Html.TableItem("receipts", (List<string>)ViewData["ModelSchema"], Model, Tuple.Create(0, OrderType.desc)).ToHtmlString(),
                    Title = "لیست رسیدی ها",
                    Url = "#",
                    GlyphIcon = "list-alt",
                    HasDetailLink = false,
                    HasSettingPanel = false,
                    PanelType = PanelType.danger
                })
            )

            <!-- /.data -->
        </div>
    </div>




</div>