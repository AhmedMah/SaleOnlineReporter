
@using GridMvc.Html
@using WebSaleDistribute.Models
@model IEnumerable<WebSaleDistribute.Models.OrderPointViewModels>

@(
    Html.Grid(Model).Named("tblOrder")
        .Columns(columns =>
        {
            columns.Add(f => f.RowNumber).Titled("ردیف");
            columns.Add(f => f.CustomerID).Titled("کد مشتری");
            columns.Add(f => f.PersonName).Titled("نام مشتری");
        }))